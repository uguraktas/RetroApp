{
  "expo": {
    "name": "Retro",
    "slug": "retroapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "retroapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "extra": {
      "supportsRTL": true
    },
    "locales": {
      "en": "./translations/en.json",
      "tr": "./translations/tr.json",
      "ar": "./translations/ar.json"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.uguraktas.retroapp",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "CFBundleLocalizations": [
          "en",
          "tr",
          "ar"
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ]
      },
      "entitlements": {
        "aps-environment": "development",
        "com.apple.security.application-groups": [
          "group.com.uguraktas.retroapp.onesignal"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#141e37",
        "foregroundImage": "./assets/images/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.uguraktas.retroapp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "expo-secure-store",
      "expo-web-browser",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#141e37",
          "dark": {
            "backgroundColor": "#141e37"
          }
        }
      ],
      [
        "onesignal-expo-plugin",
        {
          "mode": "development",
          "iPhoneDeploymentTarget": "15.0"
        }
      ],
      [
        "react-native-appsflyer",
        {
          "shouldUseStrictMode": false,
          "shouldUsePurchaseConnector": true
        }
      ],
      "expo-tracking-transparency"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}